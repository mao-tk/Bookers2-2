<div>
  <h3>User info</h3>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table class="table font-weight-bold">
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
  <div class="mt-3">
    <%= link_to edit_user_path(user.id), class: "btn btn-block btn-outline-secondary" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
</div>